<body>
  <h1>Editing book</h1>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@book.errors.count, "error") %>
    prohibited this book being saved:
  </h2>
  <ul>
    <% @book.errors.full_message.each do |message| %>
    <li>
      <%= message %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <div class="field_with_error">
    <label for="book_title">Title</label>
  </div>
  <div class="field_with_error">
    <%= f.text_field :title %>
  </div>
</div>

<div class="field">
  <div class="field_with_error">
    <label for="book_body">Body</label>
  </div>
  <div class="field_with_error">
    <%= f.text_area :body %>
  </div>
</div>

  <div class="add">
    <%= button_to "Update Book", book_path(@book.id), method: :patch %>
  </div>
  <% end %>

  <%= link_to "Show", book_path(@book.id) %>
  ï½œ
  <%= link_to "Back", books_path %>
</body>
